<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="20dip"
                android:text="hello"
                android:textColor="#ffff7872"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip" >

                <ImageView
                    android:id="@+id/avator"
                    android:layout_width="@dimen/choose_device_choose_slidingmenu_offset"
                    android:layout_height="@dimen/product_repair_avator_width"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/button_qa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:layout_toRightOf="@+id/avator"
                    android:clickable="true"
                    android:src="@drawable/button_qa" />

                <ImageView
                    android:id="@+id/button_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_qa"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="4dip"
                    android:layout_toRightOf="@+id/avator"
                    android:clickable="true"
                    android:src="@drawable/button_guide" />
                
                 <ImageView
                    android:id="@+id/button_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="4dip"
                    android:clickable="true"
                    android:layout_below="@+id/button_guide"
                    android:layout_toRightOf="@+id/avator"
                    android:src="@drawable/button_bill" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ece5e5e5"
                android:orientation="vertical"
                android:padding="15dip" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_type" />

                        <TextView
                            android:id="@+id/product_type_input"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_brand" />

                        <TextView
                            android:id="@+id/product_brand_input"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_model" />

                        <TextView
                            android:id="@+id/product_model_input"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_sn" />

                        <TextView
                            android:id="@+id/product_sn_input"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_tel" />

                        <TextView
                            android:id="@+id/product_tel_input"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            style="@style/ProductStarIcon"
                            android:src="@drawable/ic_red_star" />

                        <TextView
                            style="@style/ProductInfo"
                            android:text="@string/product_beizhu" />

                        <TextView
                            android:id="@+id/product_beizhu_tag"
                            style="@style/ViewProductInfo" />
                    </LinearLayout>
               
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>