<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff1a4e95"
                android:padding="@dimen/detail_card_view_padding">
                <ImageView android:id="@+id/button_usage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/button_usage"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView android:id="@+id/pinpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:text="@string/product_brand_full"/>
                
                <TextView android:id="@+id/product_brand_input"
                    android:layout_below="@+id/pinpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:textSize="14sp"
                    android:text="product_brand_full"/>
                
                <TextView android:id="@+id/xinghao"
                     android:layout_below="@+id/product_brand_input"
                     android:layout_marginTop="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:text="@string/product_model"/>
                
                <TextView android:id="@+id/product_model_input"
                    android:layout_below="@+id/xinghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:textSize="14sp"
                    android:text="product_brand_full"/>
                
                <TextView android:id="@+id/baoxiu"
                     android:layout_below="@+id/product_model_input"
                     android:layout_marginTop="4dip"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:text="@string/product_time"/>
                
                <TextView android:id="@+id/baoxiu_input"
                    android:layout_below="@+id/baoxiu"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wt"
                    android:textSize="14sp"
                    android:text="10000天"/>
                
                <TextView android:id="@+id/yanbao"
                     android:layout_below="@+id/product_model_input"
                     android:layout_toRightOf="@+id/baoxiu"
                     android:layout_marginTop="4dip"
                     android:layout_marginLeft="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff9d00"
                    android:text="@string/product_yanbao_time"/>
                
                 <TextView android:id="@+id/yanbao_input"
                    android:layout_below="@+id/yanbao"
                    android:layout_alignLeft="@+id/yanbao"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#ffff9d00"
                    android:textSize="14sp"
                    android:text="10000天"/>
                
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/flag_arrow_bottom" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_card_view_padding"
                android:layout_marginRight="@dimen/detail_card_view_padding"
                android:layout_marginTop="20dip" >

                <ImageView
                    android:id="@+id/avator"
                    android:layout_width="@dimen/barcode_image_view_size"
                    android:layout_height="@dimen/product_repair_avator_width"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter" />

                <ImageView android:id="@+id/flag_yanbao"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/barcode_image_view_size"
                    android:src="@drawable/flag_yanbao"
                    android:scaleType="center"
                    android:layout_below="@+id/avator"
                    android:layout_marginTop="10dip"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/avator"
                     android:layout_alignParentRight="true"
                     android:gravity="center_vertical|right"
                     android:layout_marginLeft="8dip"
                     android:orientation="horizontal">
                     <TextView android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/text_baoxiu_validate"/>
                     <ImageView
	                    android:id="@+id/baoxiuday"
	                    android:layout_width="80dip"
	                    android:layout_height="wrap_content"
	                    android:clickable="true"
	                    android:src="@drawable/button_policy" />
                     <TextView android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/unit_day"/>
                </LinearLayout>
                
            </RelativeLayout>


            <View android:background="@drawable/xuxian"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_height="3dip"/>
            
            <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/detail_card_view_padding"
                android:layout_marginRight="@dimen/detail_card_view_padding"
			    android:orientation="horizontal" >
                    
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/text_fapiao_date"
	                android:textColor="@color/blk"
	                android:textSize="14sp" />
	            
	            <TextView android:id="@+id/fapiao_date_input"
	                android:layout_width="0dip"
	                android:layout_weight="1.0"
	                android:layout_marginLeft="15dip"
	                 android:layout_marginRight="15dip"
	                android:layout_height="wrap_content"
	                android:textColor="@color/blue"
	                android:textSize="14sp" />
	            <Button
                    android:id="@+id/button_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:text="@string/menu_bill_show"
                    android:textSize="14sp"
                    android:textColor="@color/wt"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="8dip"
                    android:background="@drawable/default_blue_btn"
                    android:src="@drawable/button_bill" />
            </LinearLayout>
            
            <View android:background="@drawable/xuxian"
                android:layout_width="wrap_content"
                android:layout_height="3dip"/>
            
			<com.actionbarsherlock.internal.widget.IcsLinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="60dip"
			    android:showDividers="middle"
			    android:divider="@drawable/linearlayout_divider"
			    android:dividerPadding="10dip"
			    android:background="#ff1f253d"
                android:layout_marginTop="30dip"
                android:paddingLeft="@dimen/detail_card_view_padding"
                android:paddingRight="@dimen/detail_card_view_padding"
                android:weightSum="3"
                android:gravity="center_vertical"
			    android:orientation="horizontal" >
                    
	            <TextView
	                android:id="@+id/button_malfunction"
	                android:layout_width="0dip"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:text="@string/button_malfunction"
	                android:textColor="#ffffffff"
	                android:gravity="center"
	                android:textSize="14sp" />
	            <TextView
	                android:id="@+id/button_maintenance_point"
	                android:layout_width="0dip"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:text="@string/button_maintenance_point"
	                android:textColor="#ffffffff"
	                android:gravity="center"
	                android:textSize="14sp" />
	            
	             <TextView
	                android:id="@+id/button_maintenance_componnet"
	                android:layout_width="0dip"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:text="@string/button_maintenance_componnet"
	                android:textColor="#ffffffff"
	                android:gravity="center"
	                android:textSize="14sp" />
            </com.actionbarsherlock.internal.widget.IcsLinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>