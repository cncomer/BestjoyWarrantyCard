<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="type"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/repair_yuyue" >
        </RadioButton>

        <RadioButton
            android:id="@+id/radio_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/install_yuyue" >
        </RadioButton>

        <RadioButton
            android:id="@+id/radio_maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maintenance_yuyue" >
        </RadioButton>
    </RadioGroup>

    <TextView
            android:id="@+id/yuyue_info_title"
            style="@style/PeopleInfo"
            android:layout_marginTop="5dip"
            android:text="@string/yuyue_time" />

    <View
        android:id="@+id/yuyue_info_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@color/light_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/ProductInfo"
            android:text="@string/date" />

        <TextView
            android:id="@+id/date"
            style="@style/ProductInfoInput"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/ProductInfo"
            android:text="@string/time" />

        <TextView
            android:id="@+id/time"
            style="@style/ProductInfoInput"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>