<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title_logo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_title_logo_height"
        android:scaleType="fitXY"
        android:src="@drawable/login_top_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="4dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:orientation="vertical" >
            
		    <View android:layout_marginTop="8dip"
		        android:layout_marginBottom="8dip"
		        android:layout_width="fill_parent"
		        android:layout_height="3dip"
		        android:background="#6e9f9f9f"/>
            
		    <include layout="@layout/home_pro_city_dis_autocomplete"
		        android:id="@+id/home1"
		        android:layout_gravity="center_horizontal"/>
		    <View android:layout_marginTop="8dip"
		        android:layout_marginBottom="8dip"
		        android:layout_width="fill_parent"
		        android:layout_height="1dip"
		        android:background="#6e9f9f9f"/>
            <include layout="@layout/home_pro_city_dis_autocomplete"
                android:id="@+id/home2"
		        android:layout_gravity="center_horizontal"/>
            <View android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
		        android:layout_width="fill_parent"
		        android:layout_height="1dip"
		        android:background="#6e9f9f9f"/>
			<include layout="@layout/home_pro_city_dis_autocomplete"
			    android:id="@+id/home3"
		        android:layout_gravity="center_horizontal"/>
			
			<View android:layout_marginTop="8dip"
		        android:layout_width="fill_parent"
		        android:layout_height="1dip"
		        android:background="#6e9f9f9f"/>
			
			
            <Button android:layout_marginTop="20dip"
                android:id="@+id/button_save"
                android:layout_width="156dip"
                android:layout_height="42dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dip"
                android:background="@drawable/default_black_btn"
                android:gravity="center"
                android:text="@string/button_confirm"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>