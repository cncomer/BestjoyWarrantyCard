<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:background="#ff212121">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <!-- dalei -->
        <TextView 
            android:textColor="@color/fenlei"
		    android:textSize="18sp"
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="4dip"
		    android:paddingBottom="4dip"
		    android:clickable="true"
		    style="?android:attr/listPreferredItemHeight"
		    android:textStyle="bold"
            android:id="@+id/title_dalei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_dalei"/>
        <View android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="@color/fenlei_divider_line"/>
        <ListView android:id="@+id/dalei"
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1.0"
	        android:scrollbars="none"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="1dip"
	        android:divider="#00000000"/>
        
        <!-- xiaolei -->
        <TextView 
            android:textColor="@color/fenlei"
		    android:textSize="18sp"
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="4dip"
		    android:paddingBottom="4dip"
		    style="?android:attr/listPreferredItemHeight"
		    android:textStyle="bold"
		    android:clickable="true"
            android:id="@+id/title_xiaolei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_xiaolei"/>
        <View android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="@color/fenlei_divider_line"/>
        <ListView android:id="@+id/xiaolei"
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1.0"
	        android:scrollbars="none"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="1dip"
	        android:divider="#00000000"/>
        
        <!-- pinpai -->
        <TextView 
            android:textColor="@color/fenlei"
		    android:textSize="18sp"
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="4dip"
		    android:paddingBottom="4dip"
		    android:clickable="true"
		    style="?android:attr/listPreferredItemHeight"
		    android:textStyle="bold"
            android:id="@+id/title_pinpai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_pinpai"/>
        <View android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="@color/fenlei_divider_line"/>
        <ListView android:id="@+id/pinpai"
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1.0"
	        android:scrollbars="none"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="1dip"
	        android:divider="#00000000"/>
        
        <!-- 型号 -->
        <TextView 
            android:textColor="@color/fenlei"
		    android:textSize="18sp"
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="4dip"
		    android:paddingBottom="4dip"
		    android:clickable="true"
		    style="?android:attr/listPreferredItemHeight"
		    android:textStyle="bold"
            android:id="@+id/title_xinghao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_xinghao"/>
        <View android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="@color/fenlei_divider_line"/>
        <ListView android:id="@+id/xinghao"
	        android:layout_width="fill_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1.0"
	        android:scrollbars="none"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="1dip"
	        android:divider="#00000000"/>
    </LinearLayout>
    
	<FrameLayout android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/progressbarLayout"
	    android:visibility="gone"
	    android:background="#3e2e3543">
	    <ProgressBar android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/progressbar"
		    android:indeterminate="false"
		    android:layout_gravity="center"/>
	</FrameLayout>
	
	<LinearLayout android:id="@+id/cling"
       android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:background="#b0000000"
	   android:visibility="gone"
	   android:clickable="true"
	   android:orientation="vertical">
	   <ImageView android:id="@+id/cling_ok"
            android:src="@drawable/cling_ok"
            android:layout_width="30dip"
            android:textColor="@color/wt"
            android:layout_height="30dip"
            android:layout_gravity="right"
            android:text="@string/button_ok"
            android:layout_marginRight="20dip"
            android:layout_marginTop="50dip"
            />
        <TextView android:id="@+id/cling_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="#ffd9d9d9"
            android:text="@string/cling_choose_devices_done"/>
        
    </LinearLayout>
	
</FrameLayout>
