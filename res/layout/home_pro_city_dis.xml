<?xml version="1.0" encoding="utf-8"?>
<com.bestjoy.app.warrantycard.view.ProCityDisEditView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cncom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/homeName"
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/my_home" />
    <LinearLayout android:layout_marginTop="4dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_pcs" />

        <com.bestjoy.app.warrantycard.view.AddressCompleteEditText
            android:id="@+id/input_province"
            cncom:completionThreshold="0"
            style="@style/ProductInfoInputPlace"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/province" />

        <com.bestjoy.app.warrantycard.view.AddressCompleteEditText
            android:id="@+id/input_city"
            style="@style/ProductInfoInputPlace"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city" />

        <com.bestjoy.app.warrantycard.view.AddressCompleteEditText
            android:id="@+id/input_district"
            style="@style/ProductInfoInputPlace"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/district" />
    </LinearLayout>

    <LinearLayout android:layout_marginTop="4dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address" />

        <com.bestjoy.app.warrantycard.view.AddressCompleteEditText 
        	style="@style/ProductInfoInput"
            android:id="@+id/address" />
    </LinearLayout>

</com.bestjoy.app.warrantycard.view.ProCityDisEditView>