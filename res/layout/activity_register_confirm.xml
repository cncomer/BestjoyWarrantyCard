<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/register_bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="27dip"
        android:layout_marginRight="27dip"
        android:layout_marginTop="35dip"
        android:src="@drawable/register_bg_logo" />

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:layout_marginLeft="33dip"
        android:layout_marginRight="33dip"
        android:layout_marginTop="34dip" >

        <LinearLayout
            android:id="@+id/panel1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
             >

            <TextView
                style="@style/ProductInfo"
                android:text="@string/name"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/name_input"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/register_edittext_bg"
                android:textColor="#ff5a5a5a"
                android:singleLine="true"
                android:textSize="14sp" />
			<requestFocus />
            <TextView
                style="@style/ProductInfo"
                android:layout_marginTop="8dip"
                android:text="@string/usr_tel"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tel_input"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/register_edittext_bg"
                android:inputType="phone"
                android:textColor="#ff5a5a5a"
                android:singleLine="true"
                android:textSize="14sp" >
				<requestFocus />
            </EditText>

            <TextView
                style="@style/ProductInfo"
                android:layout_marginTop="8dip"
                android:text="@string/usr_pwd"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/register_edittext_bg"
                android:digits="@string/password_accept_chars"
                android:singleLine="true"
                android:textColor="#ff5a5a5a"
                android:textSize="14sp" >
			</EditText>

            <Button
                android:id="@+id/button_next"
                android:layout_width="129dip"
                android:layout_height="37dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dip"
                android:background="@drawable/register_button"
                android:text="@string/button_next"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:visibility="gone">

            <TextView
                style="@style/ProductInfo"
                android:text="@string/my_home_name"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/my_home"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/register_edittext_bg"
                android:text="@string/my_home"
                android:textColor="#ff5a5a5a"
                android:textSize="14sp" />

            <TextView
                style="@style/ProductInfo"
                android:layout_marginTop="8dip"
                android:visibility="invisible"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_province"
                    style="@style/ProductInfoInputPlace"
                    android:layout_height="33dip"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/register_edittext_bg"
                    android:inputType="none"
                    android:textColor="#ff5a5a5a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/province"
                    android:textColor="#ffb3c7dd"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_city"
                    style="@style/ProductInfoInputPlace"
                    android:layout_height="33dip"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/register_edittext_bg"
                    android:inputType="none"
                    android:textColor="#ff5a5a5a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:textColor="#ffb3c7dd"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_district"
                    style="@style/ProductInfoInputPlace"
                    android:layout_height="33dip"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/register_edittext_bg"
                    android:inputType="none"
                    android:textColor="#ff5a5a5a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/district"
                    android:textColor="#ffb3c7dd"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="@string/address"
                android:textColor="#ffb3c7dd"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_place_detail"
                style="@style/ProductInfoInputPlace"
                android:layout_width="fill_parent"
                android:layout_height="33dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/register_edittext_bg"
                android:inputType="none"
                android:textColor="#ff5a5a5a"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="37dip"
                    android:src="@drawable/ic_register_back_button" />

                <Button
                    android:id="@+id/button_commit"
                    android:layout_width="129dip"
                    android:layout_height="37dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dip"
                    android:background="@drawable/register_button"
                    android:text="@string/button_done"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>