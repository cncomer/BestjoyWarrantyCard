<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

   <ImageView
        android:id="@+id/title_logo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_title_logo_height"
        android:scaleType="center"
        android:background="#ff1ed1aa"
        android:src="@drawable/flag_register" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

             <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:orientation="horizontal" >
			    <TextView style="@style/ProductInfo"
			        android:text="@string/name"/>
			    <EditText android:id="@+id/name_input"
			        android:hint="@string/hint_input_usrname"
			        style="@style/ProductInfoInput"/>
			</LinearLayout>
	
              <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:orientation="horizontal" >
			    <TextView style="@style/ProductInfo"
			        android:text="@string/usr_pwd"/>
			    <EditText android:id="@+id/password_input"
			        android:hint="@string/hint_input_password"
			        android:inputType="textPassword"
			        style="@style/ProductInfoInput"/>
			</LinearLayout>
	
            <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:orientation="horizontal" >
			    <TextView style="@style/ProductInfo"
			        android:text="@string/usr_repwd"/>
			    <EditText android:id="@+id/confirm_password_input"
			        android:hint="@string/hint_input_confirm_password"
			        android:inputType="textPassword"
			        style="@style/ProductInfoInput"/>
			</LinearLayout>
			
            <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:orientation="horizontal" >
			    <TextView style="@style/ProductInfo"
			        android:text="@string/usr_tel"/>
			    <EditText android:id="@+id/tel_input"
			        android:hint="@string/hint_input_tel"
			        android:inputType="phone"
			        style="@style/ProductInfoInput"/>
			</LinearLayout>

            <Button
                android:layout_marginTop="20dip"
                android:id="@+id/button_next"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginBottom="60dip"
                android:background="@drawable/default_blue_btn"
                android:text="@string/menu_register"
                android:textColor="#ffffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>