<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/adsViewPager"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ads_height"/>
    
    <View android:id="@+id/placeholder"
        android:layout_width="fill_parent"
        android:layout_height="10dip"/>
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />
    
    <View android:id="@+id/line"
        android:layout_marginTop="8dip"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/dots"
        android:background="#6e9f9f9f"/>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/blue">
	    
		<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_weight="1"
	        android:layout_marginTop="30dip"
	        android:layout_marginBottom="30dip"
	        android:orientation="vertical">
		    <ImageView 
		        android:id="@+id/my_baoxiu_card"
		        android:layout_width="80dip"
		        android:layout_height="80dip"
				android:clickable="true"
		        android:scaleType="fitXY"
		        android:background="@drawable/dashboard_new_card_btn"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/my_baoxiu_card"
	        	android:layout_marginTop="10dip"
	        	android:layout_marginLeft="8dip"
		        android:text="@string/my_baoxiu_card"
				android:textColor="@color/text_green"/>
		</RelativeLayout>
		<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_weight="1"
	        android:layout_marginTop="30dip"
	        android:orientation="vertical">
		    
		    <ImageView 
		        android:id="@+id/telecontrol"
		        android:layout_width="80dip"
		        android:layout_height="80dip"
				android:clickable="true"
		        android:scaleType="fitXY"
		        android:background="@drawable/dashboard_my_card_btn"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/telecontrol"
	        	android:layout_marginTop="10dip"
	        	android:layout_marginLeft="12dip"
		        android:text="@string/telecontrol"
				android:textColor="@color/text_green"/>
		</RelativeLayout>
		<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_weight="1"
	        android:layout_marginTop="30dip"
	        android:orientation="vertical">
		    
		    <ImageView 
		        android:id="@+id/scan_qr_code"
		        android:layout_width="80dip"
		        android:layout_height="80dip"
				android:clickable="true"
		        android:scaleType="fitXY"
		        android:background="@drawable/dashboard_repair_btn"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        	android:layout_marginTop="10dip"
	        	android:layout_marginLeft="20dip"
		        android:layout_below="@id/scan_qr_code"
		        android:text="@string/scan_qr_code"
				android:textColor="@color/text_green"/>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>
