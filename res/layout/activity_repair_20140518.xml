<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ScrollView android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!--  TextView 
                android:id="@+id/product_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"/-->>
            <TextView 
                android:id="@+id/product_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dip"
       			android:layout_marginRight="22dip"
                android:text="海尔 液晶电视 "
                android:textSize="15sp"
                android:textColor="#ff5a5a5a"/>
            
            <View android:background="#ffd6d6d6"
                android:layout_width="fill_parent"
                android:layout_height="1dip"/>
            <TextView 
                android:id="@+id/account_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textSize="15sp"
                android:layout_marginLeft="22dip"
       			android:layout_marginRight="22dip"/>
            <TextView 
                android:id="@+id/contact_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dip"
                android:textSize="15sp"
                android:layout_marginLeft="22dip"
       			android:layout_marginRight="22dip"/>
            
            <View android:background="#ffd6d6d6"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"/>
            
            <include layout="@layout/yuyue_info_layout"/>
            

			<TextView style="@style/PeopleInfo"
	        	android:text="@string/error_des"
	        	android:layout_marginLeft="16dip"
	        	android:layout_marginTop="12dip" />

			<FrameLayout android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="15dip"
			    android:layout_marginTop="5dip"
			    android:layout_marginRight="15dip">
			    <EditText
	                android:id="@+id/product_ask_online_input"
	                android:layout_width="fill_parent"
	                android:layout_height="80dip"
	                android:paddingRight="50dip"
	                android:paddingLeft="4dip"
	                android:paddingTop="4dip"
	                android:paddingBottom="4dip"
	                android:layout_marginRight="48dip"
	                android:gravity="left|top"
	                android:layout_gravity="center_vertical"
	                android:background="@color/light_gray"
	                android:maxLength="1024"
	                android:minLines="4" />
			    
			    <ImageView android:id="@+id/button_capture"
			        android:layout_width="96dip"
			        android:layout_height="96dip"
			        android:layout_gravity="right"
			        android:src="@drawable/ic_bx_capture"
			        android:scaleType="fitXY"/>
			    
			</FrameLayout>
            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dip"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button_speak"
                    style="@style/DefaultShapeButton.Red"
                    android:layout_width="160dip"
                    android:layout_height="38dp"
                    android:text="@string/button_speek" />
                <Button
                    android:id="@+id/button_save"
                    style="@style/DefaultShapeButton.Blue"
                    android:layout_width="160dip"
                    android:layout_height="38dp"
                    android:layout_marginTop="14dip"
                    android:textColor="#ffffffff"
                    android:text="@string/button_send" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="60dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>