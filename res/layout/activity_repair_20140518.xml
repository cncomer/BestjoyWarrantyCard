<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >
    
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="30dip"
	    android:layout_gravity="center"
	    android:background="@drawable/blue_background">
	    <ImageView
	        android:id="@+id/image_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/top_more_info" />

    </FrameLayout>
    
	<com.actionbarsherlock.internal.widget.IcsLinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:showDividers="middle"
	    android:divider="@drawable/linearlayout_divider"
	    android:dividerPadding="10dip"
	    android:background="#ff1f253d"
        android:layout_marginTop="10dip"
        android:paddingLeft="@dimen/detail_card_view_padding"
        android:paddingRight="@dimen/detail_card_view_padding"
        android:weightSum="3"
        android:gravity="center_vertical"
	    android:orientation="horizontal" >
                  
        <TextView
            android:id="@+id/button_malfunction"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/button_malfunction"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/button_maintenance_point"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/button_maintenance_point"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="14sp" />
        
         <TextView
            android:id="@+id/button_maintenance_componnet"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:text="@string/button_maintenance_componnet"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:textSize="14sp" />
	</com.actionbarsherlock.internal.widget.IcsLinearLayout>

    <View android:background="@color/light_gray"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"/>

    <ScrollView android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="@dimen/title_my_product_left_margin"
        android:layout_marginRight="@dimen/title_my_product_left_margin"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/product_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            <TextView 
                android:id="@+id/product_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            
            <View android:background="@drawable/xuxian"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_height="3dip"/>
            <TextView 
                android:id="@+id/account_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textSize="14sp"/>
            <TextView 
                android:id="@+id/contact_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            
            <View android:background="@drawable/xuxian"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_height="3dip"/>
            
            <include layout="@layout/yuyue_info_layout"/>
            

			<TextView style="@style/PeopleInfo"
	        	android:text="@string/error_des" />

            <EditText
                android:id="@+id/product_ask_online_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/light_gray"
                android:gravity="left|top"
                android:maxHeight="300dip"
                android:maxLength="1024"
                android:minLines="4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_voice" />

                <Button
                    android:id="@+id/button_speak"
                    style="@style/DefaultShapeButton.Red"
                    android:layout_width="180dip"
                    android:layout_marginLeft="10dip"
                    android:text="@string/button_speek" />
            </LinearLayout>


            <Button
                android:id="@+id/button_save"
                android:layout_width="156dip"
                android:layout_height="42dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_black_btn"
                android:gravity="center"
                android:text="@string/button_send"
                android:textColor="#ffffffff"
                android:layout_marginTop="5dip"
                android:textSize="18sp" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="60dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>