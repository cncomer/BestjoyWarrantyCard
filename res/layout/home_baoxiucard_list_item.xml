<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dip"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/avator"
        android:layout_width="@dimen/preview_image_view_size"
        android:layout_height="@dimen/preview_image_view_size"
        android:scaleType="fitCenter"/>

    <LinearLayout android:layout_width="0dip"
        android:layout_weight="1.0"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        <TextView android:id="@+id/tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff404040"
            android:textSize="16sp"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
        <TextView android:id="@+id/pinpai"
            android:layout_marginTop="4dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffc0c0c0"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
        <TextView android:id="@+id/xinghao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffc0c0c0"
            android:singleLine="true"
            android:text="@string/product_debug_placeholder"/>
    </LinearLayout>
    
     <TextView android:id="@+id/flag_guobao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/flag_guobao"
        android:visibility="gone"
        android:text="@string/title_over_deadline"
        android:textColor="#ffffffff"/>
    
    <TextView android:id="@+id/flag_baoxiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff1a4f95"
        android:background="@drawable/baoxiu_zhengji"/>
</LinearLayout>
