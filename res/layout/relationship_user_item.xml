<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dip"
    android:paddingBottom="8dip">
    <com.bestjoy.app.warrantycard.view.AvatorImageView 
        android:id="@+id/avator"
        android:layout_height="67dip"
        android:layout_width="67dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dip"
        android:layout_marginRight="4dip"
        android:src="@drawable/baoxiuka_avator_default"/>
    <TextView android:id="@+id/name"
        android:layout_alignTop="@+id/avator"
        android:layout_toRightOf="@+id/avator"
        android:layout_marginLeft="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="张三"
        android:textSize="20sp"
        android:textColor="@color/blk" />
    <!-- 电话 -->
     <TextView android:id="@+id/tel"
        android:layout_alignBottom ="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="10dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1578986723"
        android:textColor="@color/blk" />
      
      <!-- 类别 -->
      <TextView android:id="@+id/typename"
        android:layout_toRightOf="@+id/avator"
        android:layout_below="@+id/name"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/bx_order_product_type"
        android:textColor="@color/blk" />
      
       <!-- 型号 -->
      <TextView android:id="@+id/xinghao"
        android:layout_toRightOf="@+id/avator"
        android:layout_below="@+id/leixing"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/bx_order_product_xinghao"
        android:textColor="@color/blk" />
      
</RelativeLayout>
