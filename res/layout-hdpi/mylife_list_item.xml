<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         android:paddingLeft="12dip" 
         android:paddingRight="12dip" 
         android:paddingTop="12dip" 
         android:layout_marginBottom="4dip" 
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="false" />

        <ImageView
            android:id="@+id/avator"
            android:layout_width="80dip"
            android:layout_height="56dip"
            android:scaleType="centerInside"
            android:src="@drawable/default_shop_avator" />

        <LinearLayout android:id="@+id/jf_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="6dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xiaofei_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/format_xiaofei_jf"
                android:textColor="#ff7e7e7e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/free_jf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="@string/format_free_jf"
                android:textColor="#ff7e7e7e"
                android:textSize="13sp" />
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/right_panel"
            android:layout_width="wrap_content"
            android:layout_height="66dip" >

            <TextView
                android:id="@+id/name"
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="right"
                android:singleLine="true"
                android:text="澳门豆腐"
                android:textColor="#ff5a5a5a"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_member_card_camera" />

                <ImageView
                    android:id="@+id/tel"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_member_card_tel" />

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_member_card_location" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.bestjoy.app.warrantycard.view.MarqueeTextView
        android:id="@+id/guanggao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:background="#fff1f5f7"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="测试广告"
        android:textColor="#ff5d879f"
        android:textSize="13sp" />

</LinearLayout>